{
  "name": "root",
  "private": true,
  "version": "1.7.1",
  "scripts": {
    "build": "nx run-many --target=build",
    "build:clean": "nx run-many --target=build:clean",
    "version": "npm pkg set version=$(NODE_OPTIONS=--no-warnings ./scripts/version.mjs) && npm run generate-release-notes && npm run generate-changelog && git add package.json CHANGELOG.md RELEASE_NOTES.md",
    "_lerna:version": "lerna version --conventional-commits --no-changelog --force-publish",
    "lerna:version": "npm run _lerna:version -- --conventional-graduate",
    "lerna:internal-version": "npm run _lerna:version -- --conventional-prerelease --preid=internal",
    "publish": "is-ci && lerna publish -y --no-verify-access --no-git-reset --registry https://npm.pkg.github.com/ from-package",
    "lint": "nx run-many --target=lint && syncpack list-mismatches --types dev,prod && prettier --check packages/*/src/**/*.{scss,css} && eslint packages/*/src",
    "test": "jest --detectOpenHandles --bail --forceExit",
    "start": "npm run dev",
    "dev": "concurrently --names \"PACKAGES,DEMO\" \"npm run watch:packages\" \"npm run start:demo\"",
    "dev:web-component": "concurrently --names \"PACKAGES,WEB-COMPONENT-DEMO\" \"npm run watch:packages\" \"npm run start:web-component\"",
    "watch:packages": "nx run-many --target=watch --output-style=stream",
    "start:demo": "nx run demo:dev",
    "start:web-component": "nx run web-component-dev:dev",
    "publish:npm": "is-ci && lerna run publish-to-npm",
    "syncpack": "syncpack fix-mismatches",
    "e2e": "playwright test --headed",
    "generate-changelog": "conventional-changelog -p angular -o CHANGELOG.md -r 0",
    "generate-release-notes": "conventional-changelog -p @ericssonbroadcastservices/conventional-changelog-redbeemedia -o RELEASE_NOTES.md -r 0",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com:ericssonbroadcastservices/javascript-player.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@ericssonbroadcastservices/conventional-changelog-redbeemedia": "^1.7.0",
    "@playwright/test": "^1.40.1",
    "@swc/core": "^1.4.2",
    "@types/can-autoplay": "^3.0.0",
    "@types/jest": "^29.5.1",
    "@types/wicg-mediasession": "^1.1.4",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "concurrently": "^8.2.2",
    "conventional-changelog-cli": "^3.0.0",
    "css-loader": "^6.7.2",
    "envify": "^4.1.0",
    "eslint": "^8.40.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerna": "^8.1.2",
    "microbundle": "^0.15.1",
    "mini-css-extract-plugin": "^2.7.5",
    "nx": "18.0.5",
    "prettier": "^2.8.8",
    "prettier-plugin-sorted": "^2.0.0",
    "sass": "^1.62.1",
    "sass-loader": "^13.2.2",
    "style-loader": "^3.3.2",
    "swc-loader": "^0.2.6",
    "syncpack": "^12.3.0",
    "ts-jest": "^29.1.0",
    "typescript": "5.3.3",
    "webpack": "^5.82.1",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-cli": "^5.1.1"
  },
  "overrides": {
    "postcss": "8.4.35"
  },
  "license": "MIT"
}
